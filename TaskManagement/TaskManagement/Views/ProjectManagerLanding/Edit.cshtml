@model TaskManagement.Models.MstrProject

@{
    ViewData["Title"] = "Edit";
    Layout = "../Shared/_Layout2.cshtml";

}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProjectId" />
            <div class="form-group">
            <label asp-for="SerialNumber" class="control-label"></label>
            <input asp-for="SerialNumber" class="form-control" disabled/>
            <span asp-validation-for="SerialNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectTitle" class="control-label"></label>
                <input asp-for="ProjectTitle" class="form-control" />
                <span asp-validation-for="ProjectTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manager" class="control-label"></label>
                <select id="myList" asp-for="ManagerId" class="form-control">
                    <option value="">Select</option>
                    @foreach (var item in @ViewBag.Managers)
                    {
                        <option value="@item.UserId">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="">Select</option>
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control" id="typeSelector">
                    <option value="">Select</option>
                    <option value="Internal">Internal</option>
                    <option value="External">External</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Customer" class="control-label"></label>
                <select id="myList1" asp-for="CustomerId" class="form-control">
                    <option value="">Select</option>
                    @foreach (var item in @ViewBag.Customers)
                    {
                        <option value="@item.CustomerId">@item.CustomerName</option>
                    }
                </select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Project">Back to List</a>
</div>


@section Scripts
{
    @{

        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script type="text/javascript">
            $(document).ready(function () {

                var type = $('#typeSelector').val();
                if (type === "Internal") {
                    $('#myList1').prop('disabled', true);
                }


                $('#typeSelector').change(function () {
                    type = $(this).val();

                    if (type === "Internal") {
                        $('#myList1').prop('disabled', true);
                        $('#myList1').val("");
                    } else {
                        $('#myList1').prop('disabled', false);
                    }
                });
            });
        </script>
    }
}
