@{
    ViewData["Title"] = "Error";
    Layout = "../Shared/_Layout1.cshtml";
    var errorMessage = TempData["ErrorMessage"] as string; // Get error message from TempData
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h2 class="mt-5">Login Error</h2>

        <!-- Display the error message -->
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger" role="alert">
                <strong>Error:</strong> @errorMessage
            </div>
        }
        else
        {
            <div class="alert alert-warning" role="alert">
                <strong>Unexpected Error:</strong> Something went wrong. Please try again later.
            </div>
        }

        <div class="mt-3">
            <a href="@Url.Action("Login", "Login")" class="btn btn-primary">Go back to Login</a>
        </div>

        <div class="mt-2">
            <p>If you continue to face issues, please contact support at <a href="mailto:support@example.com">support@example.com</a>.</p>
        </div>
    </div>
</body>
</html>
